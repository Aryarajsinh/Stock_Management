@model Aryarajsinh_0516_Model.ViewModel.ProductModel
@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Views/Shared/_LayoutPage1Admin.cshtml";
}


<div class="container">

    <h2>AddProduct</h2>
    <form method="post">
        <div class="row m-2">
            <div class="col-lg-12">
                <label>Product Name</label>
                <input type="text" name="ProductName" id="" value="@(Model!=null && Model.ProductName!=null?Model.ProductName:"")" class="form-control" />
                @Html.ValidationMessageFor(m=>m.ProductName)
            </div>
        </div>

        <div class="row m-2">
            <div class="col-lg-12">
                <label>Product Description</label>
                <input type="text" name="ProductDescription" id="" value="@(Model!=null && Model.ProductDescription!=null?Model.ProductDescription:"")" class="form-control" />
                @Html.ValidationMessageFor(m=>m.ProductDescription)
            </div>
        </div>


        <div class="row m-2">
            <div class="col-lg-12">
                <label>Product Type</label>
                <select name="ProductType" id="ProductType" class="form-control">
                    <option value=" ">Select Type</option>
                    <option value="Men"@(Model!=null && Model.ProductType!=null&&Model.ProductType.Contains("Men")?"Selected":"")>Men</option>
                    <option value="Women"@(Model!=null && Model.ProductType!=null&&Model.ProductType.Contains("Women")?"Selected":"")>Women</option>
                </select>
                @Html.ValidationMessageFor(m=>m.ProductType)
            </div>
        </div>


        <div class="row m-2">
            <div class="col-lg-12">
                <label>Quantity</label>
                <input type="number" name="Quantity" id="Quantity" value="@(Model!=null && Model.Quantity!=null?Model.Quantity:0)" class="form-control" />
                @Html.ValidationMessageFor(m=>m.Quantity)
            </div>
        </div>


        <div class="row m-2">
            <div class="col-lg-12">
                <label>Price</label>
                <input type="number" name="price" id="price" value="@(Model!=null && Model.price!=null?Model.price:0)" class="form-control" />
                @Html.ValidationMessageFor(m=>m.price)
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-lg-12 d-flex justify-content-end">
                <input type="submit" name="submit" class="btn btn-outline-success mx-2" />
                <a href="~/Admin/Product" class="btn btn-outline-dark">Back</a>
            </div>
        </div>
    </form>
</div>